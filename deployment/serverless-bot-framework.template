                  "Fn::GetAtt": ["DynamoConversationLogs", "Arn"]
                },
                {
                  "Fn::Join": ["", [{
                    "Fn::GetAtt": ["DynamoConversationLogs", "Arn"]
                  }, "/*"]]
                },
                {
                  "Fn::GetAtt": ["DynamoEntityResolver", "Arn"]
                },
                {
                  "Fn::Join": ["", [{
