              "Ref": "BotLanguage"
            },
            "botGender": {
              "Ref": "BotGender"
            },
            "botName": {
              "Ref": "BotName"
            },
            "forceCacheUpdate": "false"
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "CoreFunctionRole",
            "Arn"
          ]
        },
        "Runtime": "nodejs8.10",
        "Timeout": 180
      }
    },
