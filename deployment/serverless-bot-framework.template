        "Runtime": "nodejs8.10",
        "Timeout": 60,
        "Environment": {
          "Variables": {
            "SEND_ANONYMOUS_USAGE_DATA": {
              "Fn::FindInMap": ["Solution", "Data", "SendAnonymousUsageData"]
            },
            "SOLUTION_ID": {
              "Fn::FindInMap": ["Solution", "Data", "ID"]
            },
            "VERSION": {
              "Fn::FindInMap": ["Solution", "Data", "Version"]
            },
            "UUID": {
              "Fn::GetAtt": ["CreateUniqueID", "UUID"]
            },
